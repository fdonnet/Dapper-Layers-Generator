<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Dapper_Layers_Generator.Test</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
